---
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
}

const { title, description = 'Testen Sie die Lesbarkeit Ihrer Texte mit der Flesch-Formel' } = Astro.props;
---

<!doctype html>
<html lang="de">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title} | Leichtlesbar.ch</title>
  </head>
  <body class="min-h-screen bg-gray-50 text-gray-900 antialiased">
    <header class="bg-white shadow-sm">
      <nav class="mx-auto max-w-4xl px-4 py-4">
        <div class="flex items-center justify-between">
          <a href="/" class="text-xl font-bold text-blue-600">Leichtlesbar</a>
          <ul class="hidden gap-6 md:flex">
            <li><a href="/" class="hover:text-blue-600">Testen</a></li>
            <li><a href="#formel" class="hover:text-blue-600">Flesch-Formel</a></li>
            <li><a href="#vorteile" class="hover:text-blue-600">Vorteile</a></li>
            <li><a href="#nachteile" class="hover:text-blue-600">Nachteile</a></li>
          </ul>
          <button id="menu-toggle" class="md:hidden" aria-label="Menü öffnen">
            <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
            </svg>
          </button>
        </div>
        <ul id="mobile-menu" class="mt-4 hidden flex-col gap-2 md:hidden">
          <li><a href="/" class="block py-2 hover:text-blue-600">Testen</a></li>
          <li><a href="#formel" class="block py-2 hover:text-blue-600">Flesch-Formel</a></li>
          <li><a href="#vorteile" class="block py-2 hover:text-blue-600">Vorteile</a></li>
          <li><a href="#nachteile" class="block py-2 hover:text-blue-600">Nachteile</a></li>
        </ul>
      </nav>
    </header>

    <main class="mx-auto max-w-4xl px-4 py-8">
      <slot />
    </main>

    <footer class="mt-auto border-t bg-white py-6">
      <div class="mx-auto max-w-4xl px-4 text-center text-sm text-gray-600">
        <p>&copy; {new Date().getFullYear()} Leichtlesbar.ch</p>
      </div>
    </footer>

    <script>
      const toggle = document.getElementById('menu-toggle');
      const menu = document.getElementById('mobile-menu');
      toggle?.addEventListener('click', () => {
        menu?.classList.toggle('hidden');
        menu?.classList.toggle('flex');
      });
    </script>
  </body>
</html>
