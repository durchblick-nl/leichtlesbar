---
import { LANGUAGES } from "../i18n/index";
import "../styles/global.css";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Readability.ch – Readability Test for Multiple Languages</title>
    <meta
      name="description"
      content="Free readability test for texts in German, English, French, Italian, Spanish, and Dutch."
    />
    <meta name="robots" content="index, follow" />
    <link rel="canonical" href="https://readability.ch" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="apple-touch-icon" href="/apple-touch-icon.png" />

    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://readability.ch" />
    <meta
      property="og:title"
      content="Readability.ch – Multilingual Readability Test"
    />
    <meta
      property="og:description"
      content="Free readability test for texts in 6 languages."
    />
    <meta property="og:image" content="https://readability.ch/og-image.svg" />

    <!-- Theme Color -->
    <meta
      name="theme-color"
      content="#ffffff"
      media="(prefers-color-scheme: light)"
    />
    <meta
      name="theme-color"
      content="#111827"
      media="(prefers-color-scheme: dark)"
    />

    <!-- Theme Script -->
    <script is:inline>
      const theme = localStorage.getItem("theme");
      if (
        theme === "dark" ||
        (!theme && window.matchMedia("(prefers-color-scheme: dark)").matches)
      ) {
        document.documentElement.classList.add("dark");
      }
    </script>

    <style>
      @keyframes fadeInUp {
        from {
          opacity: 0;
          transform: translateY(20px);
        }
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }

      .animate-enter {
        animation: fadeInUp 0.6s ease-out forwards;
        opacity: 0;
      }

      .delay-100 {
        animation-delay: 0.1s;
      }
      .delay-200 {
        animation-delay: 0.2s;
      }
      .delay-300 {
        animation-delay: 0.3s;
      }
    </style>
  </head>
  <body
    class="min-h-screen flex items-center justify-center p-4 bg-gray-50 dark:bg-gray-900 text-gray-900 dark:text-gray-100 transition-colors duration-300"
  >
    <!-- Theme Toggle -->
    <div class="absolute top-4 right-4 z-20">
      <button
        id="theme-toggle"
        type="button"
        class="rounded-lg p-2 hover:bg-gray-100 dark:hover:bg-gray-700"
        aria-label="Toggle theme"
      >
        <svg
          id="sun-icon"
          class="hidden h-5 w-5 dark:block"
          fill="currentColor"
          viewBox="0 0 20 20"
          aria-hidden="true"
        >
          <path
            fill-rule="evenodd"
            d="M10 2a1 1 0 011 1v1a1 1 0 11-2 0V3a1 1 0 011-1zm4 8a4 4 0 11-8 0 4 4 0 018 0zm-.464 4.95l.707.707a1 1 0 001.414-1.414l-.707-.707a1 1 0 00-1.414 1.414zm2.12-10.607a1 1 0 010 1.414l-.706.707a1 1 0 11-1.414-1.414l.707-.707a1 1 0 011.414 0zM17 11a1 1 0 100-2h-1a1 1 0 100 2h1zm-7 4a1 1 0 011 1v1a1 1 0 11-2 0v-1a1 1 0 011-1zM5.05 6.464A1 1 0 106.465 5.05l-.708-.707a1 1 0 00-1.414 1.414l.707.707zm1.414 8.486l-.707.707a1 1 0 01-1.414-1.414l.707-.707a1 1 0 011.414 1.414zM4 11a1 1 0 100-2H3a1 1 0 000 2h1z"
            clip-rule="evenodd"></path>
        </svg>
        <svg
          id="moon-icon"
          class="block h-5 w-5 dark:hidden"
          fill="currentColor"
          viewBox="0 0 20 20"
          aria-hidden="true"
        >
          <path
            d="M17.293 13.293A8 8 0 016.707 2.707a8.001 8.001 0 1010.586 10.586z"
          ></path>
        </svg>
      </button>
    </div>

    <!-- Background Decor (Subtler for consistancy) -->
    <div
      class="fixed inset-0 overflow-hidden pointer-events-none"
      aria-hidden="true"
    >
      <div
        class="absolute -top-[20%] -left-[10%] w-[50%] h-[50%] rounded-full bg-blue-100/40 dark:bg-blue-900/10 blur-3xl opacity-50"
      >
      </div>
      <div
        class="absolute top-[40%] -right-[10%] w-[40%] h-[40%] rounded-full bg-indigo-100/40 dark:bg-indigo-900/10 blur-3xl opacity-50"
      >
      </div>
    </div>

    <main class="relative w-full max-w-2xl px-4">
      <div class="text-center mb-10 animate-enter">
        <div
          class="inline-flex items-center justify-center p-3 mb-6 bg-white dark:bg-gray-800 rounded-2xl shadow-sm ring-1 ring-gray-200 dark:ring-gray-700"
        >
          <img
            src="/favicon.svg"
            alt="Logo"
            class="w-12 h-12"
            width="48"
            height="48"
          />
        </div>
        <h1
          class="text-4xl md:text-5xl font-extrabold tracking-tight text-gray-900 dark:text-white mb-4"
        >
          Readability<span class="text-blue-600">.ch</span>
        </h1>
        <p
          class="text-lg md:text-xl text-gray-600 dark:text-gray-400 max-w-md mx-auto"
        >
          Free readability analysis. <br class="hidden sm:block" />
          Secure, fast, and 100% in your browser.
        </p>
      </div>

      <div
        class="bg-white/80 dark:bg-gray-800/80 backdrop-blur-md rounded-3xl shadow-xl shadow-gray-200/50 dark:shadow-black/20 ring-1 ring-gray-200 dark:ring-gray-700 p-6 md:p-8 animate-enter delay-100"
      >
        <h2
          class="text-center text-xs font-bold tracking-widest text-gray-500 dark:text-gray-400 uppercase mb-6"
        >
          Select Language
        </h2>

        <div class="grid grid-cols-2 sm:grid-cols-3 gap-3 md:gap-4">
          {
            Object.entries(LANGUAGES).map(([code, { nativeName, flag }]) => (
              <a
                href={`/${code}/`}
                class="group flex flex-col items-center justify-center p-4 rounded-xl bg-white dark:bg-gray-700/50 border border-gray-200 dark:border-gray-600 hover:border-blue-500 dark:hover:border-blue-400 hover:shadow-md hover:shadow-blue-500/5 transition-all duration-200 hover:-translate-y-0.5"
              >
                <span class="text-3xl mb-2 filter drop-shadow-sm group-hover:scale-110 transition-transform duration-200">
                  {flag}
                </span>
                <span class="font-medium text-gray-700 dark:text-gray-200 group-hover:text-blue-600 dark:group-hover:text-blue-400">
                  {nativeName}
                </span>
              </a>
            ))
          }
        </div>

        <div
          id="detected-language"
          class="hidden mt-8 text-center animate-fade-in"
        >
          <div
            class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-blue-50 dark:bg-blue-900/20 text-sm text-blue-700 dark:text-blue-300 border border-blue-100 dark:border-blue-800"
          >
            <span>Detected:</span>
            <a
              href="/"
              id="detected-link"
              class="font-semibold hover:underline"
            >
              Language
            </a>
          </div>
        </div>
      </div>

      <footer
        class="mt-12 text-center text-gray-500 dark:text-gray-500 text-sm animate-enter delay-200"
      >
        <p>&copy; 2003–{new Date().getFullYear()} Readability.ch</p>
        <p class="mt-2">A project by Christian Bachmann and Roger Gösele</p>
        <p class="mt-2">
          <a
            href="https://durchblick.nl/"
            target="_blank"
            rel="noopener noreferrer"
            class="hover:text-blue-600 dark:hover:text-blue-400 transition-colors"
            >durchblick.nl</a
          >
        </p>
      </footer>
    </main>

    <script is:inline>
      // Theme Toggle Logic
      const themeToggle = document.getElementById("theme-toggle");
      themeToggle?.addEventListener("click", () => {
        const isDark = document.documentElement.classList.toggle("dark");
        localStorage.setItem("theme", isDark ? "dark" : "light");
      });

      // Language Detection
      try {
        const browserLang = navigator.language.split("-")[0].toLowerCase();
        const supportedLangs = ["de", "en", "fr", "it", "es", "nl"];
        const langNames = {
          de: "Deutsch",
          en: "English",
          fr: "Français",
          it: "Italiano",
          es: "Español",
          nl: "Nederlands",
        };

        if (supportedLangs.includes(browserLang)) {
          const detected = document.getElementById("detected-language");
          const link = document.getElementById("detected-link");
          if (detected && link) {
            link.href = `/${browserLang}/`;
            link.textContent = langNames[browserLang] + " →";
            detected.classList.remove("hidden");
          }
        }
      } catch (e) {
        // Ignore detection errors
      }
    </script>
  </body>
</html>
