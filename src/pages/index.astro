---
import { LANGUAGES } from "../i18n/index";
import "../styles/global.css";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Readability.ch – Readability Test for Multiple Languages</title>
    <meta
      name="description"
      content="Free readability test for texts in German, English, French, Italian, Spanish, and Dutch."
    />
    <meta name="robots" content="index, follow" />
    <link rel="canonical" href="https://readability.ch" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="apple-touch-icon" href="/apple-touch-icon.png" />

    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://readability.ch" />
    <meta
      property="og:title"
      content="Readability.ch – Multilingual Readability Test"
    />
    <meta
      property="og:description"
      content="Free readability test for texts in 6 languages."
    />
    <meta property="og:image" content="https://readability.ch/og-image.svg" />

    <style>
      @keyframes fadeInUp {
        from {
          opacity: 0;
          transform: translateY(20px);
        }
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }

      .animate-enter {
        animation: fadeInUp 0.6s ease-out forwards;
        opacity: 0;
      }

      .delay-100 {
        animation-delay: 0.1s;
      }
      .delay-200 {
        animation-delay: 0.2s;
      }
      .delay-300 {
        animation-delay: 0.3s;
      }
    </style>
  </head>
  <body
    class="min-h-screen flex items-center justify-center p-4 bg-gradient-to-br from-blue-50 via-white to-indigo-50 dark:from-slate-900 dark:via-slate-800 dark:to-slate-900 text-slate-800 dark:text-slate-100"
  >
    <!-- Background Decor -->
    <div
      class="fixed inset-0 overflow-hidden pointer-events-none"
      aria-hidden="true"
    >
      <div
        class="absolute -top-[20%] -left-[10%] w-[50%] h-[50%] rounded-full bg-blue-400/10 blur-3xl"
      >
      </div>
      <div
        class="absolute top-[40%] -right-[10%] w-[40%] h-[40%] rounded-full bg-indigo-400/10 blur-3xl"
      >
      </div>
    </div>

    <main class="relative w-full max-w-2xl">
      <div class="text-center mb-12 animate-enter">
        <div
          class="inline-flex items-center justify-center p-3 mb-6 bg-white dark:bg-slate-800 rounded-2xl shadow-sm ring-1 ring-slate-900/5 dark:ring-white/10"
        >
          <img
            src="/favicon.svg"
            alt="Logo"
            class="w-12 h-12"
            width="48"
            height="48"
          />
        </div>
        <h1
          class="text-4xl md:text-5xl font-extrabold tracking-tight text-slate-900 dark:text-white mb-4"
        >
          Readability<span class="text-blue-600">.ch</span>
        </h1>
        <p
          class="text-lg md:text-xl text-slate-600 dark:text-slate-400 max-w-md mx-auto"
        >
          Free readability analysis for your texts. <br
            class="hidden sm:block"
          />
          Secure, fast, and 100% in your browser.
        </p>
      </div>

      <div
        class="bg-white/70 dark:bg-slate-800/50 backdrop-blur-xl rounded-3xl shadow-2xl shadow-slate-200/50 dark:shadow-black/50 border border-white/50 dark:border-white/10 p-6 md:p-8 animate-enter delay-100"
      >
        <h2
          class="text-center text-sm font-semibold tracking-wider text-slate-500 dark:text-slate-400 uppercase mb-8"
        >
          Select Language
        </h2>

        <div class="grid grid-cols-2 sm:grid-cols-3 gap-4">
          {
            Object.entries(LANGUAGES).map(([code, { nativeName, flag }]) => (
              <a
                href={`/${code}/`}
                class="group flex flex-col items-center justify-center p-4 rounded-xl bg-white dark:bg-slate-700 border border-slate-200 dark:border-slate-600 hover:border-blue-500 dark:hover:border-blue-400 hover:shadow-lg hover:shadow-blue-500/10 dark:hover:shadow-blue-400/10 transition-all duration-200 hover:-translate-y-1"
              >
                <span class="text-3xl mb-2 filter drop-shadow-sm group-hover:scale-110 transition-transform duration-200">
                  {flag}
                </span>
                <span class="font-medium text-slate-700 dark:text-slate-200 group-hover:text-blue-600 dark:group-hover:text-blue-400">
                  {nativeName}
                </span>
              </a>
            ))
          }
        </div>

        <div id="detected-language" class="hidden mt-8 text-center">
          <div
            class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-blue-50 dark:bg-blue-900/30 text-sm text-blue-700 dark:text-blue-300 border border-blue-100 dark:border-blue-800"
          >
            <span>Detected:</span>
            <a
              href="/"
              id="detected-link"
              class="font-semibold hover:underline"
            >
              Language
            </a>
          </div>
        </div>
      </div>

      <footer
        class="mt-12 text-center text-slate-500 dark:text-slate-500 text-sm animate-enter delay-200"
      >
        <p>&copy; 2003–{new Date().getFullYear()} Readability.ch</p>
        <p class="mt-2">A project by Christian Bachmann and Roger Gösele</p>
        <p class="mt-2">
          <a
            href="https://durchblick.nl/"
            target="_blank"
            rel="noopener noreferrer"
            class="hover:text-blue-600 dark:hover:text-blue-400 transition-colors"
            >durchblick.nl</a
          >
        </p>
      </footer>
    </main>

    <script is:inline>
      try {
        const browserLang = navigator.language.split("-")[0].toLowerCase();
        const supportedLangs = ["de", "en", "fr", "it", "es", "nl"];
        const langNames = {
          de: "Deutsch",
          en: "English",
          fr: "Français",
          it: "Italiano",
          es: "Español",
          nl: "Nederlands",
        };

        if (supportedLangs.includes(browserLang)) {
          const detected = document.getElementById("detected-language");
          const link = document.getElementById("detected-link");
          if (detected && link) {
            link.href = `/${browserLang}/`;
            link.textContent = langNames[browserLang] + " →";
            detected.classList.remove("hidden");
          }
        }
      } catch (e) {
        // Ignore detection errors
      }
    </script>
  </body>
</html>
