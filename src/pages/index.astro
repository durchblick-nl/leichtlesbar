---
import { LANGUAGES } from '../i18n/index';
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Readability.ch – Readability Test for Multiple Languages</title>
    <meta name="description" content="Free readability test for texts in German, English, French, Italian, Spanish, and Dutch. Analyze your texts with Flesch formula and other readability indexes." />
    <meta name="robots" content="index, follow" />
    <link rel="canonical" href="https://readability.ch" />

    <!-- Hreflang -->
    <link rel="alternate" hreflang="x-default" href="https://readability.ch/" />
    <link rel="alternate" hreflang="de" href="https://readability.ch/de/" />
    <link rel="alternate" hreflang="en" href="https://readability.ch/en/" />
    <link rel="alternate" hreflang="fr" href="https://readability.ch/fr/" />
    <link rel="alternate" hreflang="it" href="https://readability.ch/it/" />
    <link rel="alternate" hreflang="es" href="https://readability.ch/es/" />
    <link rel="alternate" hreflang="nl" href="https://readability.ch/nl/" />

    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://readability.ch" />
    <meta property="og:title" content="Readability.ch – Multilingual Readability Test" />
    <meta property="og:description" content="Free readability test for texts in 6 languages. Privacy-friendly – everything runs in your browser." />
    <meta property="og:image" content="https://readability.ch/og-image.svg" />

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <!-- Theme Color -->
    <meta name="theme-color" content="#2563eb" media="(prefers-color-scheme: light)" />
    <meta name="theme-color" content="#1e40af" media="(prefers-color-scheme: dark)" />

    <style>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      body {
        font-family: system-ui, -apple-system, sans-serif;
        min-height: 100vh;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        background: linear-gradient(135deg, #f8fafc 0%, #e0e7ff 100%);
        padding: 2rem;
      }

      @media (prefers-color-scheme: dark) {
        body {
          background: linear-gradient(135deg, #0f172a 0%, #1e1b4b 100%);
          color: #f1f5f9;
        }
      }

      .container {
        max-width: 600px;
        text-align: center;
      }

      .logo {
        width: 80px;
        height: 80px;
        margin-bottom: 1.5rem;
      }

      h1 {
        font-size: 2.5rem;
        font-weight: 700;
        color: #1e3a8a;
        margin-bottom: 0.5rem;
      }

      @media (prefers-color-scheme: dark) {
        h1 {
          color: #93c5fd;
        }
      }

      .tagline {
        font-size: 1.125rem;
        color: #64748b;
        margin-bottom: 2.5rem;
      }

      @media (prefers-color-scheme: dark) {
        .tagline {
          color: #94a3b8;
        }
      }

      .choose-label {
        font-size: 0.875rem;
        text-transform: uppercase;
        letter-spacing: 0.1em;
        color: #94a3b8;
        margin-bottom: 1rem;
      }

      .languages {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 1rem;
        margin-bottom: 2rem;
      }

      @media (min-width: 480px) {
        .languages {
          grid-template-columns: repeat(3, 1fr);
        }
      }

      .lang-btn {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 0.5rem;
        padding: 1.25rem 1rem;
        background: white;
        border: 2px solid #e2e8f0;
        border-radius: 12px;
        text-decoration: none;
        color: #334155;
        transition: all 0.2s;
        cursor: pointer;
      }

      @media (prefers-color-scheme: dark) {
        .lang-btn {
          background: #1e293b;
          border-color: #334155;
          color: #e2e8f0;
        }
      }

      .lang-btn:hover {
        border-color: #3b82f6;
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(59, 130, 246, 0.15);
      }

      .lang-btn:focus {
        outline: none;
        border-color: #3b82f6;
        box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.3);
      }

      .flag {
        font-size: 2rem;
      }

      .lang-name {
        font-weight: 500;
      }

      .detected {
        margin-top: 1.5rem;
        padding: 1rem;
        background: #dbeafe;
        border-radius: 8px;
        font-size: 0.875rem;
        color: #1e40af;
      }

      @media (prefers-color-scheme: dark) {
        .detected {
          background: #1e3a5f;
          color: #93c5fd;
        }
      }

      .detected a {
        color: inherit;
        font-weight: 600;
      }

      footer {
        margin-top: 3rem;
        font-size: 0.875rem;
        color: #94a3b8;
      }

      footer a {
        color: inherit;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <img src="/favicon.svg" alt="Readability.ch Logo" class="logo" />

      <h1>Readability.ch</h1>
      <p class="tagline">Free readability test for multiple languages</p>

      <p class="choose-label">Choose your language</p>

      <div class="languages">
        {Object.entries(LANGUAGES).map(([code, { nativeName, flag }]) => (
          <a href={`/${code}/`} class="lang-btn">
            <span class="flag">{flag}</span>
            <span class="lang-name">{nativeName}</span>
          </a>
        ))}
      </div>

      <div class="detected" id="detected-language" style="display: none;">
        Based on your browser: <a href="/" id="detected-link">Language</a>
      </div>

      <footer>
        <p>© 2003–{new Date().getFullYear()} Readability.ch</p>
        <p>A project by Christian Bachmann and Roger Gösele</p>
        <p style="margin-top: 0.5rem;"><a href="https://durchblick.nl/" target="_blank" rel="noopener noreferrer" style="color: #3b82f6;">durchblick.nl</a></p>
      </footer>
    </div>

    <script is:inline>
      // Detect browser language and suggest
      const browserLang = navigator.language.split('-')[0].toLowerCase();
      const supportedLangs = ['de', 'en', 'fr', 'it', 'es', 'nl'];
      const langNames = {
        de: 'Deutsch',
        en: 'English',
        fr: 'Français',
        it: 'Italiano',
        es: 'Español',
        nl: 'Nederlands'
      };

      if (supportedLangs.includes(browserLang)) {
        const detected = document.getElementById('detected-language');
        const link = document.getElementById('detected-link');
        if (detected && link) {
          link.href = `/${browserLang}/`;
          link.textContent = langNames[browserLang];
          detected.style.display = 'block';
        }
      }
    </script>
  </body>
</html>
